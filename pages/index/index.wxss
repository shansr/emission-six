.home_container{
  height: 100%;
}
.dtc_container{
  height: 240rpx;
  display: flex;
  flex-direction: row;
  background-color: #1296db
}
.dtc_function_item{
  height: 100%;
  width:100%;
  display: flex;
  /* 垂直居中 */
  justify-content: center;
   /* 水平居中 */
  align-items: center
}
.dtc_function_item view{
  display: flex;
  flex-direction: column;
  align-items: center
}
.dtc_function_item image{
  height: 100rpx;
  width: 100rpx;
}
.dtc_function_item text{
  color: #ffffff;
  size: 8rpx;
}

.home_item{
  margin: 8rpx;
  height: 160rpx;
  display: flex;
}
.home_item image{
  height: 160rpx;
  width: 160rpx;
  margin-right: 8rpx;
}
.item {
  display: flex;
  padding: 8rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}
.item .poster {
  width: 96rpx;
  height: 96rpx;
  margin: 16rpx;
}
.item .meta {
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* flex: 1; */
}
.item .meta .title{
  display: block;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}
.item .meta .sub-title {
  display: block;
  margin-bottom: 8rpx;
}
.item .meta .text {
  font-size: 32rpx;
}
.item .meta .sub-title {
  font-size: 28rpx;
  color: #c0c0c0;
}
.item .meta .artists {
  font-size: 26rpx;
  color: #999;
}
.item .comments {
  font-size: 22rpx;
  color: #c0c0c0;
}